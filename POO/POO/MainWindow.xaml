<Window x:Class="POO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POO"
        mc:Ignorable="d"
        Title="Convertisseur CSV >> SVG" Height="200" Width="400">
    <StackPanel>
        <Label x:Name="label" Content="Conversion CSV =&gt; SVG" HorizontalAlignment="Center"/>
        <Label x:Name="label1" Content="Entrez le fichier à convertir:" Margin="20,0"/>
        <StackPanel Height="20" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBox x:Name="filePath" TextWrapping="Wrap" Width="250" Margin="25,0,15,0" TextChanged="filePath_TextChanged"/>
            <Button x:Name="open" Content="Parcourir.." Width="75" Click="open_Click"/>
        </StackPanel>
        <Button x:Name="convert" Content="Conversion" Width="100" Height="20" Margin="0,0,0,10" VerticalAlignment="Bottom" Click="convert_Click"/>
        <Label x:Name="errorLabel" Content="" Margin="25,0" Foreground="#FF16A62A"/>
    </StackPanel>
</Window>